<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="245px"
    android:layout_height="589px"
    android:orientation="vertical"
    >
    <TextClock
        android:id="@+id/text_md"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginTop="10sp"
        android:layout_marginRight="10sp"
        android:format24Hour="Y年M月d日"
        android:textColor="#FFFFFFFF"
        android:textSize="55sp"/>
    <TextClock
        android:id="@+id/text_eeee"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginTop="10sp"
        android:layout_marginRight="10sp"
        android:format24Hour="EEEE"
        android:textColor="#FFFFFFFF"
        android:textSize="55sp"/>
    <TextClock
        android:id="@+id/text_hm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginTop="10sp"
        android:layout_marginRight="10sp"
        android:format24Hour="HH:mm"
        android:textColor="#FFFFFFFF"
        android:textSize="55sp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="bottom">
        <TextView
            android:id="@+id/text_weather"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10sp"
            android:layout_marginRight="10sp"
            android:gravity="right"
            android:textColor="#FFFFFFFF"
            android:textSize="35sp"
            android:text="天气：晴天"/>
        <TextView
            android:id="@+id/text_tmp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10sp"
            android:layout_marginRight="10sp"
            android:gravity="right"
            android:textColor="#FFFFFFFF"
            android:textSize="35sp"
            android:text="24~29°C"/>
        <TextView
            android:id="@+id/text_tmp_cur"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10sp"
            android:layout_marginRight="10sp"
            android:gravity="right"
            android:textColor="#FFFFFFFF"
            android:textSize="35sp"
            android:text="实时：25°C"/>
        <TextView
            android:id="@+id/text_wind"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10sp"
            android:layout_marginRight="10sp"
            android:gravity="right"
            android:textColor="#FFFFFFFF"
            android:textSize="35sp"
            android:text="东南风3~4级"/>
    </LinearLayout>



</LinearLayout>
