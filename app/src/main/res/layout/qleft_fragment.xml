<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="right">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_marginLeft="15px"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/LdstStationName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#ffffff"
                android:textStyle="bold"

                android:gravity="center_horizontal"
                android:layout_gravity="center"
                android:textSize="35px"
                android:text="开往XXXX方向"
                />

            <TextView
                android:id="@+id/LdstStationEName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center_horizontal"
                android:text="Bound to XXXX Station"
                android:textColor="#ffffff"
                android:textSize="20px"
                android:textStyle="bold" />
        </LinearLayout>

        <ImageView
            android:id="@+id/LDirImg"
            android:layout_width="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="10px"
            android:layout_marginRight="20px"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:src="@drawable/left"
            />
    </LinearLayout>
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:src="@drawable/devision_line"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="50px"
        android:layout_marginLeft="20px"
        android:layout_marginTop="10px"
        android:text="下一站"
        android:textColor="#ffffff"
        android:textSize="40px" />
    <TextView
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:textStyle="bold"
        android:textColor="#ffffff"
        android:layout_marginLeft="20px"
        android:textSize="20px"
        android:text="Next station"
        />
    <TextView
        android:id="@+id/leftNextStaName"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:textStyle="bold"
        android:layout_marginTop="15px"
        android:textColor="#ffffff"
        android:textSize="50px"
        android:layout_gravity="center"
        android:gravity="center"
        android:text="站点名称"
        />
    <TextView
        android:id="@+id/leftNextStaEName"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:textStyle="bold"
        android:textColor="#ffffff"
        android:textSize="20px"
        android:layout_gravity="center"
        android:gravity="center"
        android:text="站点英文名城"
        />

    <TextView
        android:id="@+id/leftNextStaEName2"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:textStyle="bold"
        android:textColor="#ffffff"
        android:textSize="50px"
        android:layout_gravity="center"
        android:text=""
        />
    <TextView
        android:id="@+id/to_station"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_marginTop="80px"
        android:text="欢迎乘坐"
        android:textSize="60px"
        android:textColor="#ffffff"
        android:layout_gravity="center"
        android:textStyle="bold"
        />
    <TextView
        android:id="@+id/nextto_station"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="宇通快速公交"
        android:textSize="60px"
        android:textColor="#ffffff"
        android:layout_gravity="center"
        android:textStyle="bold"
        />
    <TextView
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_marginTop="110px"
        android:text="文明出行"
        android:textSize="60px"
        android:layout_gravity="center"
        android:textColor="#ffffff"
        android:textStyle="bold"
        />
    <TextView
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="有序乘车"
        android:textSize="60px"
        android:textColor="#ffffff"
        android:layout_gravity="center"
        android:textStyle="bold"
        />
</LinearLayout>